{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // Test files allow more relaxed type checking
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "scripts/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}